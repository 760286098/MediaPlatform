<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为UserDao接口方法提供sql语句配置 -->
<mapper namespace="com.AnalyzeSystem.dao.UserInfoDao">
    <insert id="insertUser" parameterType="UserInfo">
        INSERT INTO userinfo(userId,NAME,PASSWORD,departmentName,studentNumber,phoneNumber,startYear,description,registerTime)VALUES(#{userinfo.id},#{userinfo.name},#{userinfo.password},#{userinfo.departmentName},#{userinfo.studentNumber},#{userinfo.phoneNumber},#{userinfo.startYear},#{userinfo.description},#{userinfo.registerTime})
    </insert>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM userinfo WHERE userId=#{userId}
    </delete>
    <update id="updateUser" parameterType="UserInfo">
        UPDATE userinfo
        <set>
            departmentName =#{userinfo_1.departmentName},
            studentNumber =#{userinfo_1.studentNumber},
            phoneNumber =#{userinfo_1.phoneNumber},
            startYear =#{userinfo_1.startYear},
            description =#{userinfo_1.description}

        </set>
        where userId=#{userinfo_1.userId}
    </update>

    <select id="selectUserById" resultType="UserInfo" parameterType="int">
        SELECT * FROM userinfo WHERE userId = #{userId}
    </select>

    <select id="selectAll" resultType="UserInfo">
        SELECT * FROM userinfo order by userId desc
    </select>

    <select id="selectUserByName" parameterType="java.lang.String" resultType="UserInfo">
        SELECT * FROM userinfo WHERE NAME=#{name}
    </select>

    <select id="selectUserByParams" resultType="UserInfo" parameterType="UserInfo">
        SELECT * FROM userinfo
        <where>
            <if test="name!=null and name!=''">and NAME=#{name}</if>
        </where>
        order by userId desc
    </select>

    <select id="selectUserCount" resultType="int">
        select count(*) from userinfo
    </select>

    <select id="getLastestUserId" resultType="int">
        select max(userId) FROM userinfo
    </select>
</mapper>
