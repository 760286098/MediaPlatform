<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.AnalyzeSystem.dao.MessageDao">

    <insert id="insertMessage" parameterType="message">
        insert into message(messageId,userId,time,content,title)
        value (#{message.messageId},#{message.userId},#{message.time},#{message.content},#{message.title})
    </insert>

    <delete id="deleteMessage">
        delete from message where messageId=#{messageId}
    </delete>

    <!--<update id="updateContent">
        update message
        <set>
            <if test="newContent!=null and newContent!='' ">content =#{newContent},</if>
        </set>
        where messageId=#{messageId}
    </update>-->

    <select id="selectMessageById" resultType="Message">
        select * from message where messageId=#{messageId}
    </select>

    <select id="selectUserNameByIdInMessage" resultType="String">
        select name from userinfo u, message m where u.userId = m.userId and m.messageId=#{messageId}
    </select>



    <select id="selectMessageByTitle" resultType="Message">
        select * from message where title=#{title}
    </select>

    <select id="getLastestMessageId" resultType="int">
        select max(messageId) FROM message
    </select>
</mapper>
