<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.AnalyzeSystem.dao.Wenzhang_infoDao">

    <select id="selectArticleByMpId" resultType="Wenzhang_info">
        select * from wenzhang_info where mp_id =#{mp_id}
    </select>

    <select id="selectArticleById" resultType="Wenzhang_info">
        select * from wenzhang_info where _id = #{_id}
    </select>

    <select id="selectArticleByName" resultType="Wenzhang_info">
        select * from wenzhang_info where title = #{title}
    </select>

    <select id="selectAllArticles" resultType="ArticleInfo">
        select (mp_id,likes,browse_times,comments,date_time) from wenzhang_info
    </select>

    <select id="selectInfoById" resultType="ArticleInfo">
        select (mp_id,likes,browse_times,comments,date_time) from wenzhang_info
        where _id=#{id}
    </select>

</mapper>